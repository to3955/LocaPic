<% if user.present? %>
  <% if current_user.following?(user) %>
    <%= button_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote: true, class: "follow-button", id: "unfollow-button" %>
  <% else %>
    <%= button_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "follow-button", id: "follow-button" %>
  <% end %>
<% end %>
