<div class="container py-5">
  <div class="row mt-2 mb-3 offset-1 text-center">
    <h3 class="px-4 title">マイページ</h3>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="row mb-2">
        <h3 class="col-2">登録情報</h3>
        <p>
          <%= link_to "編集する", edit_information_path, class: "btn btn-success ml-5 pl-5 pr-5" %>
        </p>
      </div>
      <table class="table table-bordered">
        <tr>
          <th>プロフィール画像</th>
          <th>ユーザー名</th>
        </tr>
        <tr>
          <td><%= image_tag @user.get_profile_image(50, 50) %></td>
          <td><%= @user.last_name %><%= @user.first_name %></td>
          <td>フォロー数: <%= @user.followings.count %></td>
          <td>フォロワー数: <%= @user.followers.count %></td>
          <td><%= render "user/relationships/btn", user: @user, options: { class: "follow-link" } %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "自分の投稿一覧", post_path(current_user), class: "btn btn-primary mt-3" %>
    <%= link_to "フォロー一覧", follows_user_path(@user), class: "btn btn-info mt-3 ml-3" %>
    <%= link_to "フォロワー一覧", followers_user_path(@user), class: "btn btn-info mt-3 ml-3" %>
  </div>
</div>
