<% if user_signed_in? %>
  <div class="col-md-4">
    <div class="search-form">
     <%= form_with url: search_path, method: :get, local: true do |f| %>
        <div class="form-row">
          <div class="col">
            <%= f.text_field :word, class: "form-control", placeholder: "検索キーワード" %>
          </div>
          <div class="col-auto"> <!-- col-autoを追加 -->
            <%= f.submit "検索", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
