<% if user_signed_in? %>
  <div class="col-xs-3">
    <div class="search-form">
      <%= form_with url: user_searches_search_path, method: :get, local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :word, class: "form-control" %>
        </div>
        <br>
        <div class="form-group">
          <div class="select-box">
            <%= f.label :search, "検索方法", class: "control-label" %>
            <%= f.select :search, options_for_select([["完全一致", "perfect_match"], ["部分一致", "partial_match"]], selected: 'perfect_match'), {}, class: "form-control" %>
          </div>
        </div>
        <br>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
