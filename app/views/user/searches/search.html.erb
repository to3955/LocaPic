<%# app/views/user/searches/search.html.erb %>
<table class="table table-hover table-inverse">
  <!-- Userモデルの検索結果を表示 -->
  <h2>Users search for "<%= @word %>"</h2>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td><%= user.full_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <!-- Locationモデルの検索結果を表示 -->
  <h2>Locations search for "<%= @word %>"</h2>
  <thead>
    <tr>
      <th>Place</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.place_name %></td>
        <td><%= location.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
