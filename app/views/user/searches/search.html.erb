<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <!-- Userモデルの検索結果を表示 -->
    <h2>Users search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_profile_image(50, 50) %>
            <% end %>
          </td>
          <td><%= user.last_name %> <%= user.first_name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!-- Locationモデルの検索結果を表示 -->
    <h2>Locations search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>Image</th> <!-- Userが存在する場合に表示 -->
        <th>Place</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td>
            <% if location.user.present? %>
              <!-- Userが存在する場合の処理 -->
              <%= link_to user_path(location.user) do %>
                <%= image_tag location.user.get_profile_image(50, 50) %>
              <% end %>
            <% else %>
              <!-- Userが存在しない場合の処理（例: 何も表示しない） -->
            <% end %>
          </td>
          <td><%= link_to location.place_name, show_detail_post_path(location.id) %></td>
          <td><%= location.description %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
