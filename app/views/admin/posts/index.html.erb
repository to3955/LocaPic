<h1>管理者用投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿ID</th>
      <th>ユーザー</th>
      <th>キャプション</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td></td>
        <td><%= post.caption %></td>
        <td>
          <%= link_to "詳細", admin_post_path(post), class: "btn btn-info" %> |
          <%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "この投稿を削除しますか？" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
