<h1 class="text-center">管理者用投稿一覧</h1>

<div class="d-flex justify-content-center">
  <% if @posts.any? %>
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>投稿ID</th>
          <th>ユーザー</th>
          <th>キャプション</th>
          <th>アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.user.full_name %></td>
            <td><%= post.caption %></td>
            <td>
              <%= link_to "詳細", admin_post_path(post), class: "btn btn-info" %> |
              <%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "この投稿を削除しますか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center">投稿がありません。</p>
  <% end %>
</div>
